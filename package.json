{
  "name": "postcli-ts",
  "version": "0.1.0",
  "description": "Send handcrafted cold emails from your terminal (TypeScript port)",
  "license": "MIT",
  "type": "module",
  "packageManager": "bun@1.2.2",
  "bin": {
    "postcli-ts": "dist/cli.js",
    "postcli": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates",
    ".env.example",
    "contacts.csv",
    "links.json"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/cli.ts send-default",
    "dry": "tsx src/cli.ts send-default --dry-run",
    "validate": "tsx src/cli.ts validate --smtp --links",
    "start": "node dist/cli.js"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "csv-parse": "^5.6.0",
    "csv-stringify": "^6.5.2",
    "dotenv": "^16.5.0",
    "nodemailer": "^6.10.1",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@types/nodemailer": "^6.4.17",
    "@types/nunjucks": "^3.2.6",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}
