EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Per-role subjects (default behavior)
EMAIL_SUBJECT_FE=Frontend Engineer - React / Next.js
EMAIL_SUBJECT_BE=Backend Engineer - APIs & Scalable Systems
EMAIL_SUBJECT_FS=Full Stack Engineer - TypeScript / Node.js

# Template role used by `bun dev`: fe | be | fullstack
POSTCLI_ROLE=fullstack

# Defaults for `send-default`
SEND_LIMIT=0
SKIP_CONTACTED=true
MUTATE=true
RESUME_ON_FAILURE=true

# Optional
FROM_NAME=Your Name
CONTACTS_FILE=contacts.csv
SEND_LOG_FILE=sent_log.csv
